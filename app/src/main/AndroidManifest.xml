<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.smartcity">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".utils.AppConfig"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".activity.limited.N3Q2Activity" />
        <activity android:name=".activity.limited.N3Q3Activity" />
        <activity android:name=".activity.limited.N3Q4Activity" />
        <activity android:name=".activity.limited.N3Q5Activity" />
        <activity android:name=".activity.limited.N3Q2InfoActivity" />
        <activity android:name=".activity.limited.N3Q3InfoActivity" />
        <activity android:name=".activity.limited.N3Q4InfoActivity" />
        <activity android:name=".activity.limited.N3Q5InfoActivity" />
        <activity android:name=".activity.personal.LoginActivity" />
        <activity android:name=".activity.personal.RegistryActivity" />
        <activity android:name=".activity.personal.PersonalInfoActivity" />
        <activity android:name=".activity.personal.PersonalOderInfoActivity" />
        <activity android:name=".activity.personal.PersonalOderListActivity" />
        <activity android:name=".activity.personal.PersonalFeedbackActivity" />
        <activity android:name=".activity.personal.PersonalFeedbackInfoActivity" />
        <activity android:name=".activity.personal.PersonalFeedbackListActivity" />
        <activity android:name=".activity.personal.PersonalChangePasswordActivity" />
        <activity android:name=".activity.home.NullActivity" />
        <activity android:name=".activity.home.NewsInfoActivity" />
        <activity android:name=".activity.home.NewsSearchActivity" />
        <activity
            android:name=".MainActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:exported="true"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name=".GuideActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>